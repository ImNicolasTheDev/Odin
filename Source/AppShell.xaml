    <TabBar>
        <Tab x:Name="tab1" Title="Home"
             Icon="{AppThemeBinding Light=home_light.png, Dark=home_dark.png}">
            <ShellContent
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage"/>
        </Tab>
        <Tab x:Name="tab2" Title="Options"
             Icon="{AppThemeBinding Light=manage_account_light.png, Dark=manage_account_dark.png}">
            <ShellContent
                ContentTemplate="{DataTemplate local:Parameters}"
                Route="Parameters"/>
        </Tab>
    </TabBar>

    <ShellContent
        Title="Home"
        Icon="{AppThemeBinding Light=home_light.png, Dark=home_dark.png}"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>
    <ShellContent
        Title="Options"
        Icon="{AppThemeBinding Light=manage_account_light.png, Dark=manage_account_dark.png}"
        ContentTemplate="{DataTemplate local:Parameters}"
        Route="Parameters"/>
</Shell>
